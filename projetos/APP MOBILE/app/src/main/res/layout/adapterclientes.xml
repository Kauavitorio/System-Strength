<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#000"
    android:layout_height="wrap_content">

    <!--Txt info-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/precioneparaaisinfo"
        android:textColor="#A6FFFFFF"
        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SmallSp" />

    <!--Animation-->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationclienteslist"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/construction" />

    <!--Txt Nome Client-->
    <TextView
        android:id="@+id/txtnomecliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginEnd="16dp"
        android:textColor="#fff"
        android:textSize="22sp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/animationclienteslist"
        app:layout_constraintTop_toTopOf="parent" />

    <!--Txt Email Client-->
    <TextView
        android:id="@+id/txtemailcliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        android:textSize="19sp"
        android:textColor="#F2D5D5D5"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/animationclienteslist"
        app:layout_constraintTop_toBottomOf="@+id/txtnomecliente" />

    <TextView
        android:id="@+id/txtcnpjcliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        android:textAlignment="center"
        android:textColor="#F2D5D5D5"
        android:textSize="19sp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/animationclienteslist"
        app:layout_constraintTop_toBottomOf="@+id/txtemailcliente" />

</androidx.constraintlayout.widget.ConstraintLayout>