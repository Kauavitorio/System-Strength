@model AppBancoDominio.Produto
<style>
    .back {
        width: 100%;
        text-decoration: underline;
        margin-left: 13%;
        padding-right: 15%;
        margin-top: 18%;
        font: bold 10pt sans-serif;
        color: black;
    }

    .container {
        margin-left: 22%;
        display: inline-flex;
        background-color: white;
        margin-top: 8%;
        width: 55%;
    }

    .dl-horizontal {
        margin-top: 12%;
        width: 120%;
    }

    dt {
        width: 10%;
        margin-bottom: 6%;
        padding-right: 35%;
        font: bold 5sp sans-serif;
    }

    dd {
        margin-left: 5%;
        width: 78%;
    }

    h2 {
        margin-left: 5%;
        height: 60px;
        text-align: center;
        font: bold 18pt sans-serif;
    }

    .btn_edit {
        text-transform: uppercase;
        text-align: center;
        border: none;
        padding: 10px;
        text-decoration: none;
        background: #677eff;
        color: #fff;
        cursor: pointer;
        font-size: 15px;
        transition: 0.5s;
    }

    .btn_edit:hover {
        background: #88d9de;
        color: black;
        font: bold;
    }
</style>
<div class="container">
    <h2>Detalhes</h2>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.id_prod)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.id_prod)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.nm_prod)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nm_prod)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.qntd_prod)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.qntd_prod)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.cat_prod)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cat_prod)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.preco_prod)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.preco_prod)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.data_prod)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.data_prod)
        </dd>
        @Html.ActionLink("Voltar para Lista", "ProdCadastrados", "Inicio", new { @class = "back" })
        @Html.ActionLink("Editar", "EditarProd", new { id = Model.id_prod }, new { @class = "btn_edit" })
    </dl>
</div>