@model AppBancoDominio.Produto
<style>
    .back {
        width: 100%;
        text-decoration: underline;
        margin-left: 13%;
        padding-right: 15%;
        margin-top: 18%;
        font: bold 10pt sans-serif;
        color: black;
    }

    .container {
        margin-left: 25%;
        display: inline-flex;
        background-color: white;
        margin-top: 1%;
        width: 50%;
    }

    .dl-horizontal {
        margin-left: 10%;
        margin-top: 8%;
        width: 120%;
    }

    dt {
        width: 10%;
        margin-bottom: 5%;
        padding-right: 35%;
        font: bold 5sp sans-serif;
    }

    dd {
        margin-left: 15%;
        width: 78%;
    }

    h2 {
        margin-top: -2%;
        margin-bottom: 8%;
        margin-left: -80%;
