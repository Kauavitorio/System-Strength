@model AppBancoDominio.Funcionario
@{
    ViewBag.Title = "CadastrarFunc";
    Layout = "~/Views/Shared/_PalacePetz.cshtml";
}
<style>
    .back {
        text-decoration: underline;
        margin-left: -5%;
        font: bold 10pt sans-serif;
        color: black;
    }

    section {
        margin-left: 18%;
        display: inline-flex;
    }

    h2 {
        text-align: center;
        display: inline-flex;
        margin-left: 25%;
        font: bold 15pt;
        margin-bottom: 5%;
    }

    .form-horizontal {
        border-radius: 5px;
        padding-top: 2%;
        padding-left: 10%;
        background-color: white;
        display: block;
        width: 70vw;
        height: 90vh;
        margin-top: 5%;
    }

    .label2 {
        width: 30%;
        margin: 0% 10%;
        display: flex;
        margin-right: -15%;
        font: bold 12pt sans-serif;
    }

    .form-group {
        margin-top: 4.2%;
        margin-left: 5%;
        display: flex;
    }

    .editor {
        font: italic 12pt sans-serif;
        display: flex;
        background: none;
        width: 20vw;
        border: none;
        border-bottom: solid 3px #000;
        outline: none;
    }

    .cracha {
        display: flex;
        width: 50%;
        margin-top: -50%;
        margin-left: 45%;
    }

    .btn_cad {
        text-transform: uppercase;
        display: block;
        border: none;
        margin-top: 2%;
        margin-left: 18%;
        text-decoration: none;
        padding: 10px;
        width: 50%;
        max-width: 200px;
        background: #677eff;
        color: #fff;
        cursor: pointer;
        font-size: 14px;
        transition: 0.5s;
    }

        .btn_cad:hover {
            background: #88d9de;
            color: black;
            font: bold;
        }
</style>
<section>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h2>Cadastrar Funcionário</h2>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.nm_func, new { htmlAttributes = new { placeholder = "Nome do Funcionário", @class = "editor" } })
                @Html.ValidationMessageFor(model => model.nm_func, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.cpf_func, new { htmlAttributes = new { placeholder = "CPF do Funcionário", @class = "editor" } })
                @Html.ValidationMessageFor(model => model.cpf_func, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.cg_func, new { htmlAttributes = new { placeholder = "Cargo do Funcionário", @class = "editor" } })
                @Html.ValidationMessageFor(model => model.cg_func, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.end_func, new { htmlAttributes = new { placeholder = "Endereço do Funcionário", @class = "editor" } })
                @Html.ValidationMessageFor(model => model.end_func, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.tel_func, new { htmlAttributes = new { placeholder = "Telefone do Funcionário", @class = "editor" } })
                @Html.ValidationMessageFor(model => model.tel_func, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Cadastrar" class="btn_cad" />
            </div>
        </div>
        <img src="~/fonts/cracha_func.png" class="cracha">

        <div>
            @Html.ActionLink("Ver Listas de Funcionários Cadastrados", "FuncCadastrados", "Inicio", new { @class = "back" })
        </div>
    </div>
    }
</section>
@section Scripts{
    <script>
        $(document).ready(function () {
            $("#cpf_func").inputmask("mask", { "mask": "999.999.999-99" }, { reverse: true });
        })
        $(document).ready(function () {
            $("#tel_func").inputmask("mask", { "mask": "(99)9999-99999" });
        })
    </script>
    }