@model AppBancoDominio.Funcionario
<style>
    .back {
        width: 100%;
        text-decoration: underline;
        margin-left: 13%;
        padding-right: 15%;
        margin-top: 18%;
        font: bold 10pt sans-serif;
        color: black;
    }
    .container {
        margin-left: 22%;
        display: inline-flex;
        background-color: white;
        margin-top: 8%;
        width: 55%;
    }
    .dl-horizontal {
        margin-top: 12%;
        width: 120%;
