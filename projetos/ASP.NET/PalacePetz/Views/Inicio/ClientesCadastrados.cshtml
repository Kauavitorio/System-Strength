@model IEnumerable<AppBancoDominio.Cliente>
@{
    ViewBag.Title = "ClientesCadastrados";
    Layout = "~/Views/Shared/_PalacePetz.cshtml";
}
<style>
    .novoCli {
        text-decoration: underline;
        margin-left: 10%;
        font: bold 12pt sans-serif;
        color: black;
    }

    h2 {
        width: 50vw;
        display: inline-flex;
        margin-left: 35%;
        font: bold 25pt sans-serif;
        margin-top: 3%;
        margin-bottom: 5%;
    }

    section {
        width: 92%;
        margin-top: 2%;
        margin-left: 6%;
        padding-right: 10%;
    }

    table {
        box-shadow: 4px 5px 5px #004a6b;
        border: solid 2px #171720;
        display: flex;
        margin-left: 7%;
        background-color: rgba(255, 255, 255, 0.75);
        color: #000;
    }

    th {
        text-align: center;
        border: solid 2px #171720;
        border-left: none;
        font: bold 1em sans-serif;
    }

    td {
        text-align: center;
        border: solid 2px #171720;
        border-left: none;
        font: normal 1em sans-serif;
    }

    .op {
        border-right: none;
    }
</style>
<h2>Clientes Cadastrados</h2>
<p>@Html.ActionLink(" - Cadastrar novo Cliente", "CadastrarCli", "Inicio", new { @class = "novoCli" })</p>
<section>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id_cli)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cpf_cli)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nm_cli)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.end_cli)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.comple_cli)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tel_cli)
            </th>
            <th class="op">
                Opções:
            </th>
        </tr>

        @foreach (var item in Model)
        {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.id_cli)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cpf_cli)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nm_cli)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.end_cli)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.comple_cli)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tel_cli)
        </td>
        <td class="op">
            @Html.ActionLink("Editar", "EditarCli", new { id = item.id_cli }) |
            @Html.ActionLink("Detalhes", "DetalhesCli", new { id = item.id_cli }) |
            @Html.ActionLink("Excluir", "ExcluirCli", new { id = item.id_cli })
        </td>
    </tr>
        }
    </table>
</section>