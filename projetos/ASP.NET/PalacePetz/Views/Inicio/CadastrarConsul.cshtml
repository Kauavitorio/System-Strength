@model AppBancoDominio.Consulta
@{
    ViewBag.Title = "Cadastrar Cliente";
    Layout = "~/Views/Shared/_PalacePetz.cshtml";
}
<style>
    .back {
        text-decoration: underline;
        margin-left: -5%;
        font: bold 10pt sans-serif;
        color: black;
    }

    section {
        margin-left: 18%;
        display: inline-flex;
    }

    h2 {
        text-align: center;
        display: inline-flex;
        margin-left: 25%;
        font: bold 15pt;
        margin-bottom: 5%;
    }

    .form-horizontal {
        border-radius: 5px;
        padding-top: 0%;
        padding-left: 10%;
        background-color: white;
        display: block;
        width: 70vw;
        height: 95vh;
        margin-top: 1%;
    }

    .label2 {
        width: 30%;
        margin: 0% 10%;
        display: flex;
        margin-right: -15%;
        font: bold 12pt sans-serif;
    }

    .form-group {
        margin-top: 2.8%;
        margin-left: 5%;
        display: flex;
    }

    .editor {
        font: italic 12pt sans-serif;
        display: flex;
        background: none;
        width: 23vw;
        border: none;
        border-bottom: solid 3px #000;
        outline: none;
    }

    .cracha_agen {
        display: flex;
        width: 45%;
        margin-top: -50%;
        margin-left: 45%;
    }

    .btn_agen {
        text-transform: uppercase;
        display: block;
        border: none;
        margin-top: 5%;
        margin-left: 18%;
        text-decoration: none;
        padding: 10px;
        width: 50%;
        max-width: 200px;
        background: #677eff;
        color: #fff;
        cursor: pointer;
        font-size: 14px;
        transition: 0.5s;
    }

        .btn_agen:hover {
            background: #88d9de;
            color: black;
            font: bold;
        }
</style>
<section>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h2>Agendar Consulta</h2>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.raca_animal, new { htmlAttributes = new { placeholder = "Raça do Animal", @class = "editor" } })
                @Html.ValidationMessageFor(model => model.raca_animal, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.nm_cli, new { htmlAttributes = new { placeholder = "Nome do Cliente", @class = "editor" } })
                @Html.ValidationMessageFor(model => model.nm_cli, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.cpf_cli, new { htmlAttributes = new { placeholder = "CPF do Cliente", @class = "editor" } })
                @Html.ValidationMessageFor(model => model.cpf_cli, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.end_cli, new { htmlAttributes = new { placeholder = "Endereço do Cliente", @class = "editor" } })
                @Html.ValidationMessageFor(model => model.end_cli, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.tel_cli, new { htmlAttributes = new { placeholder = "Telefone do cliente", @class = "editor" } })
                @Html.ValidationMessageFor(model => model.tel_cli, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.nm_vet, new { htmlAttributes = new { placeholder = "Nome do Veterinário", @class = "editor" } })
                @Html.ValidationMessageFor(model => model.nm_vet, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.dt_consulta, new { htmlAttributes = new { placeholder = "Data da Consulta", @class = "editor" } })
                @Html.ValidationMessageFor(model => model.dt_consulta, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.hr_consulta, new { htmlAttributes = new { placeholder = "Hora da Consulta", @class = "editor" } })
                @Html.ValidationMessageFor(model => model.hr_consulta, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.forma_paga, new { htmlAttributes = new { placeholder = "Forma de pagamento", @class = "editor" } })
                @Html.ValidationMessageFor(model => model.forma_paga, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Agendar" class="btn_agen" />
            </div>
        </div>
        <img src="~/fonts/serv_agenda.png" class="cracha_agen">
        @Html.ActionLink("Ver Listas de Consultas Agendadas", "ConsulCadastrados", "Inicio", new { @class = "back" })
    </div>
    }
</section>
@section Scripts{
    <script>
        $(document).ready(function () {
            $("#cpf_cli").inputmask("mask", { "mask": "999.999.999-99" }, { reverse: true });
        })
        $(document).ready(function () {
            $("#tel_cli").inputmask("mask", { "mask": "(99)9999-99999" });
        })
        $(document).ready(function () {
            $("#dt_consulta").inputmask("mask", { "mask": "99/99/9999" });
        })
        $(document).ready(function () {
            $("#hr_consulta").inputmask("mask", { "mask": "99:99" });
        })
    </script>
}